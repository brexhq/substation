{
	"name": "Go",
	"build": {
		"dockerfile": "Dockerfile"
	},
	"remoteUser": "root",
	"runArgs": [
		"--memory=2g",
		"--cpus=2"
	],
	"postCreateCommand": "bash .devcontainer/install-dev-tools.sh",
	"customizations": {
		"vscode": {
			"extensions": [
				"ms-vscode.go",
				"hashicorp.terraform",
				"zxh404.vscode-proto3",
				"grafana.vscode-jsonnet"
			]
		}
	}
}
